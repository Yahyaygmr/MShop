@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/UILayout/Index.cshtml";
}


<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürünler</a>
                <span class="breadcrumb-item active">Ürün Detayı</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("ProductDetailProductImagesComponentPartial", new { id = ViewBag.productId })
        @await Component.InvokeAsync("ProductDetailProductFeatureComponentPartial", new { id = ViewBag.productId })
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Information</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (0)</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("ProductDetailProductDescriptionComponentPartial", new { id = ViewBag.productId })

                    @await Component.InvokeAsync("ProductDetailProductInformationComponentPartial", new { id = ViewBag.productId })

                    @await Component.InvokeAsync("ProductDetailProductReviewComponentPartial", new { id = ViewBag.productId })

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->
<!-- Products Start -->
@await Component.InvokeAsync("ProductDetailUMayAlsoLikeComponentPartial")

<!-- Products End -->