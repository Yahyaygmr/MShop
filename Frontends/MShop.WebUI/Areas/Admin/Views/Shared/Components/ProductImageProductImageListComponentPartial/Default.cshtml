@model List<ResultProductImageDto>

    @if(Model.Count>0)
    {
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden" style="height: 330px;">
                        <img class="img-fluid w-100 h-100 object-fit-cover" src="@item.Image" alt="">
                    </div>
                </div>
            </div>

        }
    </div>
    }
    else
    {
        <div class="ti-alert alet-info p-2">
            <span>Bu ürün için henüz görsel yüklenmemiş.</span>
        </div>
    }


