@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Güncelle</h4>
            <p class="card-description"> Lütfen güncellemek istediğiniz ürün bilgilerini eksiksik olarak  giriniz </p>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <input type="hidden" asp-for="ProductId"/>
                    <div class="form-group">
                        <label for="exampleInputName1">Kategori</label>
                        <select class="form-control" asp-for="CategoryId">
                            <option>Seçiniz</option>
                            @foreach (var item in ViewBag.categories as List<ResultCategoryDto>)
                            {
                                <option value="@item.CategoryId">@item.CategoryName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Ürün Adı</label>
                        <input type="text" class="form-control" placeholder="Ürün adı" asp-for="ProductName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Fiyatı</label>
                        <input type="text" class="form-control" placeholder="Ürün adı" asp-for="Price">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Resim Url</label>
                        <input type="text" class="form-control" placeholder="Ürün adı" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Açıklama</label>
                        <input type="text" class="form-control" placeholder="Ürün adı" asp-for="Description">
                    </div>
                </div>
                <button class="btn btn-primary text-white btn-lg me-2">Güncelle</button>
                <a href="/Admin/Product/Index/" class="btn btn-light btn-lg">Ürün Listesine Dön</a>
            </form>
        </div>
    </div>
</div>


