@model CreateProductImageDto

@{
    ViewData["Title"] = "CreateProductImage";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    string prdId = ViewBag.productId;
}
<style>
    .rounded-border {
        border: 1px solid lightgray; /* Açık gri border */
        border-radius: 10px; /* Kenarları oval yapmak için */
        padding: 10px; /* İç boşluk */
        /* width: fit-content;  İçeriğe göre genişlik */
        margin: 25px 0px; /* Çevresindeki boşluk */
        text-align: center;
    }
</style>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="rounded-border">
                <h4>Ürün Bilgileri</h4>
                @await Component.InvokeAsync("ProductImageProductDetailComponentPartial", new { id = ViewBag.productId })
            </div>
            <div class="rounded-border">
                <h4>Ürün Göreselleri</h4>
                @await Component.InvokeAsync("ProductImageProductImageListComponentPartial", new { id = ViewBag.productId })
            </div>
            <h4 class="card-title">Yeni Ürün Görseli Ekle</h4>
            <h4 class="card-title">@ViewBag.productId</h4>
            <p class="card-description"> Lütfen eklemek istediğiniz görselin linkini girin. </p>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="ProductId" value="@ViewBag.productId" />
                <div class="form-group">
                    <label for="exampleInputName1">Görsel Linki</label>
                    <input type="text" class="form-control" placeholder="Görsel Linki" asp-for="Image">
                </div>
                <button class="btn btn-primary text-white btn-lg me-2">Kaydet</button>
                <a href="/Admin/Product/Index/" class="btn btn-light btn-lg">Ürün Listesine Dön</a>
            </form>
        </div>
    </div>
</div>