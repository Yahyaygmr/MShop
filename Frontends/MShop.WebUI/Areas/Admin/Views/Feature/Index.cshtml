@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Öneçıkan Alanı</h4>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>İkon</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.Icon</td>
                            <td>
                                <a href="/Admin/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a>
                                <a href="/Admin/Feature/UpdateFeature/@item.FeatureId" class="btn btn-dark text-white">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-white">
        <a href="/Admin/Feature/CreateFeature/" class="btn btn-primary btn-lg text-white">+ Yeni Öneçıkan Oluştur</a>
    </div>
</div>

